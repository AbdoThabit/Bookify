@model BookingVM


<div class="container">
    <form method="post" asp-action="Create" asp-controller="Booking">

        <div class="form-group">
            <label asp-for="RoomTypeId">select Room</label>
            <select class="form-control" asp-for="RoomTypeId" asp-items="@(new SelectList(ViewBag.Rooms, "RoomNum", "RoomType.Name")) " style="border:1px solid black">
                <option></option>
            </select>
            <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            <div>

                <div class="form-group">
                    <label asp-for="RoomTypeId">select Guest</label>
                    <select class="form-control" asp-for="GuestId" asp-items="@(new SelectList(ViewBag.Guests, "Id", "FirstName")) " style="border:1px solid black">
                        <option></option>
                    </select>
                    <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                    <div>
                        <label asp-for="TotalPrice" class="form-label"></label>
                        <input asp-for="TotalPrice" style="border:1px solid black" class="form-control" />
                        <span asp-validation-for="TotalPrice" class="text-danger"></span>

                    </div>
                    <div id="date-picker-example" class="md-form md-outline input-with-post-icon datepicker" inline="true">
                        <label asp-for="CheckInDate">CheckInDate</label>
                        <input asp-for="CheckInDate" style="border:1px solid black" placeholder="Select date" type="date" id="example" class="form-control">
                        <i class="fas fa-calendar input-prefix"></i>
                        <span asp-validation-for="CheckInDate" class="text-danger"></span>
                    </div>
                    <div id="date-picker-example" class="md-form md-outline input-with-post-icon datepicker" inline="true">
                        <label asp-for="CheckOutDate">CheckInDate</label>
                        <input asp-for="CheckOutDate" style="border:1px solid black" placeholder="Select date" type="date" id="example" class="form-control">
                        <i class="fas fa-calendar input-prefix"></i>
                        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                    </div>

                    <br>
                    <br>
                    <input type="submit" class="btn" value="add" style="background-color:#D4AF37;color:white"></input>



    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>