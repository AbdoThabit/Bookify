@model List<Booking>

<h1>All Bookings</h1>

<p>
    <a asp-action="Create" class="btn" style="background-color:#D4AF37;color:white">Add New Booking</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                checkin
            </th>
            <th>
                checkout
            </th>
            <th>
                TotalPrice
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CheckInDate
                </td>
                <td>
                    @item.CheckOutDate
                </td>
                <td>
                    @item.TotalPrice
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>