@model RoomVM


<form  method="post" asp-action="Create" asp-controller="Room">
    <div class="form-group">
        <label asp-for="Status">Status</label>
        <input asp-for="Status" type=" text" class="form-control" placeholder="Status">
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomTypeId">select Room Type</label>
        <select class="form-control" asp-for="RoomTypeId" asp-items="@(new SelectList(ViewBag.roomTypes, "RoomTypeId", "Name"))">
            <option></option>
        </select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>

        
        <input type="submit" class="btn btn-warning" value="add"></input>
            
            
       
</form>