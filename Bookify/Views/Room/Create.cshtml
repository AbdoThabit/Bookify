@model RoomVM


<form  method="post" asp-action="Create" asp-controller="Room">
    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select class="form-control" asp-for="Status" style="border:1px solid black">
            <option value="Free">Free</option>
            <option value="Reservired">Reservired</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomTypeId">select Room Type</label>
        <select class="form-control" asp-for="RoomTypeId" asp-items="@(new SelectList(ViewBag.roomTypes, "RoomTypeId", "Name")) " style="border:1px solid black">
            <option></option>
        </select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>

        <br>
        <br>
        <input type="submit" class="btn" value="add" style="background-color:#D4AF37;color:white"></input>
            
            
       
</form>